@model ClearMVC.Models.ProjectDetails
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Neuer Job</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("CreateProjectDetailItems", "AdminUser", FormMethod.Post, new { @novalidate="novalidate"}))
    {
        @Html.AntiForgeryToken()
<div class="box-body">
    <div class="form-group col-md-6">
        @Html.LabelFor(p => p.StartDate, "Start Datum", new { @class = "control-label" })
        <input type="datetime-local" class="form-control" name="ProjectDetails.StartDate" required>
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(p => p.FinishDate, "End Datum", new { @class = "control-label" })
        <input type="datetime-local" class="form-control" name="ProjectDetails.FinishDate" required>
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(p => p.Square, "Quadrat m2", new { @class = "control-label" })
        <input type="number" class="form-control" name="ProjectDetails.Square">
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(p => p.Duration, "Dauer", new { @class = "control-label" })
        <input type="text" class="form-control" name="ProjectDetails.Duration">
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(p => p.PersonId, "Personal", new { @class = "control-label" })
        @Html.DropDownList("ProjectDetails.PersonId", ViewBag.Person as SelectList, new { @class = "form-control selectD", @style = "width:100%;" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(p => p.ProjectDetailTypeId, "Type", new { @class = "control-label" })
        @Html.DropDownList("ProjectDetails.ProjectDetailTypeId", ViewBag.Type as SelectList, new { @class = "form-control selectD", @style = "width:100%;" })
    </div>

    <div class="form-group col-md-12">
        @Html.LabelFor(p => p.ForRefuse, "Für Reklamation", new { @class = "control-label" })
        <div class="form-group">
         
            <div class="radio">
            <label>
                <input type="radio" name="ProjectDetails.ForRefuse" value="true">
                Ja
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="ProjectDetails.ForRefuse" checked="" value="false">
                Nein
            </label>
        </div>
        </div>
    </div>
    <input type="hidden" name="ProjectDetails.ProjectId" value="@ViewBag.ProjectId" />
</div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary btn-block">Erstellen</button>
        </div>
    }
</div>