@model IEnumerable<ClearMVC.ModelsVM.DailyJobCustomerVM>
@{ ViewBag.Title = "PersonalPage";}

<div class="col-md-12">
    <div class="col-md-4">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@ViewBag.News</h3>

                <p>Mitteilung</p>
            </div>
            <div class="icon">
                <i class="fa fa-newspaper-o"></i>
            </div>
            <a href="@Url.Action("NewsForCustomer","KundenUser")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-md-4">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@ViewBag.Activities</h3>
                <p>Aktivität</p>
            </div>
            <div class="icon">
                <i class="fa fa-universal-access"></i>
            </div>
            <a href="@Url.Action("ActivitiesForCustomer","KundenUser")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-md-4">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>@ViewBag.Projects</h3>

                <p>Aufgaben</p>
            </div>
            <div class="icon">
                <i class="fa fa-cog"></i>
            </div> 
            <a href="@Url.Action("MyJobs","KundenUser")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Alle Aufgaben</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <th>Aufgabe</th>
                            <th>Standort</th>
                            <th>Alle Aufgaben</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProjectId</td>
                                <td>@item.ProjectName</td>
                                <td>@item.Location</td>
                                <td><span class="label label-danger">@item.JobCount</span></td>
                                <td>
                                    @Html.ActionLink("Liste der Auftraggeben", "ListProjectDetails", "KundenUser",new {ProjectId = item.ProjectId },new {@class="btn btn-warning" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
}