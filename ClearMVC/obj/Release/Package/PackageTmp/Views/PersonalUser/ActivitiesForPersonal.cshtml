@model IEnumerable<ClearMVC.Models.Activities>
@{
    ViewBag.Title = "ActivitiesForPersonal";
}

@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Aktivitäten</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Thema</th>
                            <th>Text</th>
                            <th>Aktivitätsdatum</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Subject</td>
                                <td>@item.ActivityText</td>
                                <td>@item.ActivityDate.Value.ToString("dd.MM.yyyy")</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
}
else
{
<div class="col-md-12">
    <div class="box box-default">
        <div class="box-body">
            <div class="callout callout-info">
                <h4>Keine Daten!</h4>
                <p>Keine registrierten Aktivität.</p>
            </div>
        </div>
    </div>
</div>
}
