@model ClearMVC.ModelsVM.FirmaRegisterVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Steril365 | Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href=@Url.Content("~/Content/bootstrap.min.css")>
    <!-- Font Awesome -->
    <link rel="stylesheet" href=@Url.Content("~/Content/font-awesome.min.css")>
    <!-- Theme style -->
    <link rel="stylesheet" href=@Url.Content("~/Content/AdminLTE.min.css")>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="https://www.steril365.de" target="_blank"><img src="~/Content/img/sterilLogo.png" class="img-responsive center-block" /></a>
        </div>
        <!-- /.login-logo -->

        <div class="login-box-body">
            <h4 class="text-bold center-block text-center" style="color:red;">Angaben zur Firma</h4>
            @using (Html.BeginForm("CompanyRegister", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <label class="control-label">Firmenname</label>
                        <input type="text" name="firma.Name" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Steuernummer</label>
                        <input type="text" name="firma.VATCode" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">E-Mail</label>
                        <input type="email" name="firma.Email" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Telefonnummer</label>
                        <input type="text" name="firma.Phone" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Straße</label>
                        <input type="text" name="firma.Street" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Nummer</label>
                        <input type="text" name="firma.Number" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Stadt</label>
                        <input type="text" name="firma.City" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Bundesland</label>
                        <input type="text" name="firma.Area" class="form-control" required>
                    </div>
                    <hr />
                    <h4 class="text-bold center-block text-center" style="color:red;">Manager Information</h4>
                    <div class="form-group has-feedback">
                        <label class="control-label">Name </label>
                        <input type="text" name="users.Name" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Familienname </label>
                        <input type="text" name="users.LastName" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Email </label>
                        <input type="email" name="users.Email" class="form-control" required>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label">Kennwort </label>
                        <input type="text" name="users.Password" class="form-control" required>
                        <p class="help-block" style="color:red;">Mit diesem Kennwort und E-Mail werden Sie sich anmelden.</p>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="checkbox center-block">
                                <label>
                                    <input type="checkbox" tabindex="13" id="chkDate" name="chkDate" value="true"> Akzeptieren Sie unseren<a href="https://www.steril365.de/privacy-policy" target="_blank"> Datenschutz</a>.
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                </div>

                <div class="box-footer">
                    <input type="submit" tabindex="4" id="btnLogin" class="btn btn-primary btn-block btn-flat" value="Senden" />
                </div>
            }
            @if (ViewBag.Message != null)
            {
                <p style="color:red;text-align:center;"> @ViewBag.Message </p>
            }
        </div>
        <!-- /.modal -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src=@Url.Content("~/Scripts/jquery-3.4.1.min.js")></script>
    <!-- Bootstrap 3.3.7 -->
    <script src=@Url.Content("~/Scripts/bootstrap.min.js")></script>

    <script>
        $(document).ready(function () {
            $('#btnLogin').prop('disabled', true);
            $('#chkDate').click(function () {
                if ($(this).prop("checked") == true) {
                    $('#btnLogin').prop('disabled', false);

                }
                else if ($(this).prop("checked") == false) {
                    $('#btnLogin').prop('disabled', true);
                }
            });
        });
    </script>
</body>
</html>