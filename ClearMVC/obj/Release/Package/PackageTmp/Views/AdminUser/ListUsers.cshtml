@model IEnumerable<ClearMVC.Models.Users>
@{
    ViewBag.Title = "ListUsers";
}

@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Benutzerliste</h3>

                <div class="box-tools">
                    <div class="pull-right">
                        <a href="@Url.Action("CreateUser","AdminUser")" class="btn btn-success">Benutzer erstellen</a>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <th>Typ</th>
                            <th>Benutzer E-Mail</th>
                            
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@item.UsersId</td>
                        <td>@item.UserTypes.Type</td>
                        <td>@item.Email</td>
                      
                        <td>
                            @Html.ActionLink("Löschen", "ChangeStatusUsers", new { Id = item.UsersId }, new { @class = "btn btn-danger" }) |  @Html.ActionLink("Kennwort zurücksetzen", "ChangePassword", new { Id = item.UsersId }, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
}
else
{
<div class="col-md-12">
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Keine Benutzer</h3>
        </div>
        <div class="box-body">
            <h3>Keine Aufzeichnungen gefunden</h3><br />
            @Html.ActionLink("Benutzer Erstellen", "CreateUser", "AdminUser",null, new { @class = "btn btn-success btn-block" })
        </div>
        <!-- /.box-body -->
    </div>
</div>
   
}