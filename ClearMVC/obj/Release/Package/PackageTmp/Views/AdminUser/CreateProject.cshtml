@model ClearMVC.ModelsVM.ProjectsVM

@{
    ViewBag.Title = "CreateProject";
}

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Aufgabe erstellen</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("CreateProject", "AdminUser", FormMethod.Post))
            {
        <div class="box-body">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label">Aufgabe</label>
                <input type="text" class="form-control" required name="Projects.Name" />
            </div>
            <div class="form-group">
                <label class="control-label">Standort</label>
                <input type="text" class="form-control" name="Projects.Location" />
            </div>
            <div class="form-group">
                <label class="control-label">Kunde</label>
                @Html.DropDownList("Projects.CustomerId", ViewBag.Customers as SelectList, new { @class = "form-control selectD" })
            </div>
            <div class="form-group">
                <label class="control-label">Bezugsperson Name</label>
                <input type="text" class="form-control" required name="Contacts.Name" />
            </div>
            <div class="form-group">
                <label class="control-label">Bezugsperson Famillien Name</label>
                <input type="text" class="form-control" required name="Contacts.SurName" />
            </div>
            <div class="form-group">
                <label class="control-label">Bezugsperson Handynummer</label>
                <input type="text" class="form-control" required name="Contacts.GSM" />
            </div>
            <div class="form-group">
                <label class="control-label">Bezugsperson E-Mail</label>
                <input type="text" class="form-control" required name="Contacts.Email" />
            </div>
            <input type="hidden" name="Projects.FirmaId" value="@ViewBag.FirmaId" />
        </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="submit" class="btn btn-block btn-success" value="Speichren" />
                </div>
            }
            </div>
    
           
       

    </div>
