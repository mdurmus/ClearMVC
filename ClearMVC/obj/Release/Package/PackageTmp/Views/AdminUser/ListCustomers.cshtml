@model IEnumerable<ClearMVC.Models.Customers>
@{
    ViewBag.Title = "ListCustomers";
}
@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Liste der Auftraggeber</h3>

                <div class="box-tools">
                    <div class="pull-right">
                        @Html.ActionLink("Auftraggeber erstellen", "CreateCustomer", "AdminUser", new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <th>E-mail</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CustomersId</td>
                                <td>@item.Email</td>
                                <td>@item.Name</td>
                                @if (item.IsActive == false)
                                {
                                    <td><span class="label label-danger">Pasiv</span></td>
                                }
                                else
                                {
                                    <td><span class="label label-success">Aktiv</span></td>
                                }
                                <td>
                                    @Html.ActionLink("Aktiv/Pasiv", "ChangeStatusCustomer", "AdminUser", new { Id = item.CustomersId }, new { @class = "btn btn-warning" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
}
else
{
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Keine Kunden</h3>
            </div>
            <div class="box-body">
                <h3>Keine Aufzeichnungen gefunden</h3><br />
                @Html.ActionLink("Kunden Erstellen", "CreateCustomer", "AdminUser", null, new { @class = "btn btn-success btn-block" })
            </div>
            <!-- /.box-body -->
        </div>
    </div>
}
