@model ClearMVC.ModelsVM.ProjectDetailVM
@{
    ViewBag.Title = "Project Detail";
}

<div class="col-md-12">
    <div class="col-md-4">
        <div class="box box-solid">
            <div class="box-header with-border">
                <i class="fa fa-info-circle"></i>
                <h3 class="box-title">Aufgabenbeschreibung</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl>
                    <dt>Aufgaben Nr.</dt>
                    <dd>@Model.Project.ProjectsId</dd>
                    <dt>Aufgabe</dt>
                    <dd>@Model.Project.Name</dd>
                    @if (Model.Project.Location == null)
                    {
                        <dt>Standort</dt>
                        <dd>---</dd>
                    }
                    else
                    {
                        <dt>Standort</dt>
                        <dd><a href="@Model.Project.Location" target="_blank">@Model.Project.Location</a></dd>
                    }
                </dl>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <div class="col-md-4">
        <div class="box box-solid">
            <div class="box-header with-border">
                <i class="fa fa-info-circle"></i>
                <h3 class="box-title">Kunden</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl>
                    <dt>Name</dt>
                    <dd>@Model.Customer.Name</dd>
                    <dt>E-Mail</dt>
                    <dd><a href="mailto:@Model.Customer.Email" target="_blank">@Model.Customer.Email</a></dd>
                    <dt>Handynummer</dt>
                    <dd><a href="tel:@Model.Customer.Phone" target="_blank">@Model.Customer.Phone</a></dd>
                </dl>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <div class="col-md-4">
        <div class="box box-solid">
            <div class="box-header with-border">
                <i class="fa fa-info-circle"></i>

                <h3 class="box-title">Aufgaben Kontaktperson</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl>
                    <dt>Name FamillienName</dt>
                    <dd>@Model.Contact.Name @Model.Contact.SurName</dd>
                    <dt>Handynummer</dt>
                    <dd><a target="_blank" href="tel:@Model.Contact.GSM">@Model.Contact.GSM</a></dd>
                    <dt>Email</dt>
                    <dd><a target="_blank" href="mailto:@Model.Contact.Email">@Model.Contact.Email</a></dd>
                </dl>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>


<div class="col-md-12">
    @Html.Action("CreateProjectDetailItems", "AdminUser", new { projectId = Model.Project.ProjectsId })

</div>
<div class="col-md-12">
    @Html.Action("ProjectDetailItems", "AdminUser", new { Id = Model.Project.ProjectsId })
</div>

