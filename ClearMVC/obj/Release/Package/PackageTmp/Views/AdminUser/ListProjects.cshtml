@model IEnumerable<ClearMVC.Models.Projects>

@{
    ViewBag.Title = "List Projects";
}

@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Alle Aufgaben</h3>

                <div class="box-tools">
                    <div class="pull-right">
                        @Html.ActionLink("Aufgabe erstellen", "CreateProject", "AdminUser", null, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <th>Aufgabe</th>
                            <th>Kunde</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProjectsId</td>
                                <td>@item.Name</td>
                                <td>@item.Customers.Name</td>
                                <td>
                                    @Html.ActionLink("Details", "ProjectDetail", "AdminUser", new { Id = item.ProjectsId }, new { @class = "btn btn-warning" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
}
else
{
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Keine Projekte</h3>
            </div>
            <div class="box-body">
                <h3>Keine Projekte gefunden</h3><br />
                @Html.ActionLink("Projekte Erstellen", "CreateProject", "AdminUser", null, new { @class = "btn btn-success btn-block" })
            </div>
            <!-- /.box-body -->
        </div>
    </div>
}